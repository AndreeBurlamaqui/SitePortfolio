    transition: transform 0.2s;
  }

  .gallery-item:hover img, 
  .gallery-item:hover video {
    transform: scale(1.05); /* Slight zoom in */
}

  /* Zoom Icon Overlay */
  .cursor-pointer { cursor: pointer; }
  
