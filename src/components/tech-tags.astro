---
import '../styles/global.css';

interface Props {
  rawTechStack: any[] | null | undefined;
}

const { rawTechStack = [] } = Astro.props;
// Ensure we only have valid, non-empty strings
const techStack = (rawTechStack || [])
  .flat() // Unpack nested arrays if any
  .filter(tech => typeof tech === 'string' && tech.trim() !== '' // Remove any invalid entries
);
---

{techStack && techStack.length > 0 && (
  <div class="tech-stack-wrapper">
    {techStack.map((tech) => (
      <span class="tag">{tech}</span>
    ))}
  </div>
)}