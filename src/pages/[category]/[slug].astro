---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/base-layout.astro';
import '../../styles/global.css';
import StoreButtons from '../../components/store-buttons.astro';
import SmartVideo from '../../components/smart-video.astro';
import TechTags from '../../components/tech-tags.astro';

export async function getStaticPaths() {
  const games = await getCollection('released-games');
  const uiStudies = await getCollection('ui-studies');
  const prototypes = await getCollection('prototypes');

  const gameRoutes = games.map(entry => ({
    params: { category: 'released-games', slug: entry.slug },
    props: { entry },
  }));

  const uiRoutes = uiStudies.map(entry => ({
    params: { category: 'ui-studies', slug: entry.slug },
    props: { entry },
  }));

    const prototypeRoutes = prototypes.map(entry => ({
    params: { category: 'prototypes', slug: entry.slug },
    props: { entry },
  }));

  return [...gameRoutes, ...uiRoutes, ...prototypeRoutes];
}

// General data of the entry
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.title} - AndrÃ©e Burlamaqui`}>
  
  <article class="game-container">
    
    <header class="game-header">
      <h1>{entry.data.title}</h1>
      <p style="justify-content: center; text-align: center;">{entry.data.description}</p>
      <StoreButtons data = {entry.data}/>

      <hr>

    <SmartVideo data={entry.data} />

        <div class="about-header-grid">
            <div class="about-box">
              <span class="tag vertical">{entry.data.role}</span>
              <span class="tag vertical">{entry.data.timeFrame}</span>
              <span class="tag vertical">{entry.data.status}</span>
            </div>

            <div class="about-box">
              <span class="tag vertical">{entry.data.engine}</span>
              <span class="tag vertical">{entry.data.language}</span>
              <span class="tag vertical">{entry.data.studio}</span>
            </div>
          </div>

          <div class="about-details">
            <TechTags rawTechStack={[
              ...(entry.data.importantTechStack ?? []),
              ...(entry.data.extraTechStack ?? [])
            ]} />
          </div>

          <hr>
    </header>

    <div class="content-body">
      <Content />
    </div>

  </article>
</BaseLayout>

<style>
  /* LAYOUT CONTAINER */
  .game-container {
    width: 50%;
    margin-left: 2rem;
    margin-right: auto;
    padding-bottom: 4rem;
  }

  /* HEADER */
  .game-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin: 0.5rem 0;
    line-height: 1.1;
  }

  /* MARKDOWN CONTENT STYLES */
  .content-body {
    font-size: 0.9rem;
    line-height: 1.7;
    color: #333;
  }
  
  /* Make embedded images in markdown responsive */
  .content-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .about-header-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Two equal columns */
    justify-content: center;
  }

  .about-box {
    /* background: #f9f9f9; 
    border-radius: 12px;
    border: 1px solid #eee; */
    padding: 1.5rem;
    margin-bottom: 5px;
    justify-content: center;
    display: inline;
  }

  .about-box h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    color: #888;
    letter-spacing: 1px;
  }

  .about-details {
    padding: 0 0.5rem; /* Slight indent so tags align with boxes */
  }

  /* Responsive Fix for Mobile */
  @media screen and (max-width: 768px) {
    .about-header-grid {
      grid-template-columns: 1fr 1fr; /* Stack boxes on small screens */
    }

    .game-container {
      width: 90%;
      margin-left: 1rem;
      margin-right: auto;
    }

  }
</style>