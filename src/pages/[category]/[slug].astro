---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/base-layout.astro';
import '../../styles/global.css';
import StoreButtons from '../../components/store-buttons.astro';
import SmartVideo from '../../components/smart-video.astro';
import TechTags from '../../components/tech-tags.astro';
import ProjectGallery from '../../components/project-gallery.astro';

export async function getStaticPaths() {
  const collections = ['released-games', 'ui-studies', 'prototypes'] as const;
  
  const paths = await Promise.all(
    collections.map(async (category) => {
      const items = await getCollection(category);
      return items.map(entry => ({
        params: { category, slug: entry.slug },
        props: { entry },
      }));
    })
  );

  return paths.flat();
}

// General data of the entry
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.title} - AndrÃ©e Burlamaqui`}>
  
  <article class="game-container">
    
    <div class="main-column">
    <header class="game-header">
      <h1>{entry.data.title}</h1>
      <p style="justify-content: center; text-align: center;">{entry.data.description}</p>
      <StoreButtons data = {entry.data}/>

      <hr>

    <SmartVideo data={entry.data} />

        <div class="about-header-grid">
            <div class="about-box">
              <span class="tag vertical">{entry.data.role}</span>
              <span class="tag vertical">{entry.data.timeFrame}</span>
              <span class="tag vertical">{entry.data.status}</span>
            </div>

            <div class="about-box">
              <span class="tag vertical">{entry.data.engine}</span>
              <span class="tag vertical">{entry.data.language}</span>
              <span class="tag vertical">{entry.data.studio}</span>
            </div>
          </div>

          <div class="about-details">
            <TechTags rawTechStack={[
              ...(entry.data.importantTechStack ?? []),
              ...(entry.data.extraTechStack ?? [])
            ]} />
          </div>

          <hr>
    </header>


      <div class="content-body">
        <Content />
      </div>

    </div>

      <aside class="gallery-sidebar">
        <div class="gallery-sticky">
          <ProjectGallery folder={entry.slug} />
        </div>
      </aside>
    </aside>


  </article>
</BaseLayout>

<style>
  /* LAYOUT CONTAINER */
  .game-container {
    display: grid;
    grid-template-columns: 3fr 1fr; /* Main Content | Sidebar */
    gap: 6rem;
    width: 90%;
    max-width: 1400px; /* prevents lines from getting too long on 4k screens */
    padding-bottom: 4rem;
    margin-left: auto;
    margin-right: auto;
  }

  /* HEADER */
  .game-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin: 0.5rem 0;
    line-height: 1.1;
  }

  /* MARKDOWN CONTENT STYLES */
  .content-body {
    font-size: 0.9rem;
    line-height: 1.7;
    color: #333;
  }
  
  /* Make embedded images in markdown responsive */
  .content-body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .about-header-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Two equal columns */
    justify-content: center;
  }

  .about-box {
    /* background: #f9f9f9; 
    border-radius: 12px;
    border: 1px solid #eee; */
    padding: 1.5rem;
    margin-bottom: 5px;
    justify-content: center;
    display: inline;
  }

  .about-box h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    color: #888;
    letter-spacing: 1px;
  }

  .about-details {
    padding: 0 0.5rem; /* Slight indent so tags align with boxes */
  }

  .gallery-sidebar {
    /* 1. Define the "Window" Size */
  max-height: 80vh;  /* Uses 80% of the screen height */
  overflow-y: auto;  /* Adds scrollbar if images exceed that height */
  
  /* 2. Positioning */
  position: sticky;  /* Keeps the window in view while you read */
  top: 5rem;         /* 2rem gap from top of screen */
  
  /* 3. Layout */
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding-right: 10px; /* Prevents scrollbar from covering image edge */
  }

  .gallery-sticky {
    top: 5rem; /* Keeps images in view while scrolling */
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .gallery-item {
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #eee;
    background: #fdfdfd;
    transition: transform 0.2s;
  }
  
  .gallery-item:hover {
    transform: scale(1.02);
  }

  .gallery-item img {
    width: 100%;
    display: block;
    height: auto;
  }


  /* Responsive Fix for Mobile */
  @media screen and (max-width: 768px) {
    .about-header-grid {
      grid-template-columns: 1fr 1fr; /* Stack boxes on small screens */
    }

    .game-container {
      width: 90%;
      margin-left: 1rem;
      margin-right: auto;
    }

  }
</style>