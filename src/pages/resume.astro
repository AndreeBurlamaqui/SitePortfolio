---
import BaseLayout from '../layouts/base-layout.astro';
const cvLink = "https://docs.google.com/document/d/e/2PACX-1vSiF3s74ZPENkPWUov56h7KxCShlV4-dOkhPrYFdSLV2anGvwbYIJb6BjJUA5MSEBNEO6pQLeuI6vxO/pub?embedded=true";
---

<BaseLayout title="Resume - AndrÃ©e Burlamaqui">
  
  <div class="resume-wrapper">
    
    <div class="doc-container">
      <iframe 
        src= {cvLink}
        class="resume-frame">
      </iframe>
    </div>

  </div>

</BaseLayout>

<style>
  .resume-wrapper {
    width: 100%; /* Ensures it shrinks on mobile */
    margin: 0 auto; /* Centers it */
    justify-content: center;
    display: flex;
    flex-direction: column;
    height: 100%;
    margin-left: -2%;
  }

  .doc-container {
    flex-grow: 1; /* Fills remaining space */
    background: #f0f0f0; /* Grey background behind the paper */
    border-radius: 8px;
    overflow: hidden; /* Hides double scrollbars */
    width: 816px;
    max-width: 105%;
    max-height: 100%;
  }

  .resume-frame {
    width: 100%;
    height: 100%;
    border: none; /* Removes the ugly default border */
    display: block;
  }
</style>